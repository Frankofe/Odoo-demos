<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_acopio" model="ir.ui.view">
        <field name="name">sale.order.form.acopio</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_confirm']" position="before">
                <button name="action_open_acopio_wizard"
                        type="object"
                        string="Acopio"
                        class="btn-primary"
                        groups="construnort_acopio.group_construct_acopio"
                        attrs="{'invisible': [('state', 'not in', ['draft','acopio'])]}"/>
            </xpath>
            <field name="state" position="attributes">
                <attribute name="widget">statusbar</attribute>
                <attribute name="statusbar_visible">draft,sent,sale,acopio,done,cancel</attribute>
            </field>
        </field>
    </record>
</odoo>
